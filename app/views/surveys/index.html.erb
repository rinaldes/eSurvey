<div class="col-sm-12">
  <section class="panel">
    <header class="panel-heading">
      List Surveys
    </header>
    <div class="panel-body">
      <div class="adv-table editable-table ">
        <% if current_user.role == "admin" %>
          <div class="clearfix form-group">
            <div class="btn-group">
              <%= link_to new_survey_path, id: "editable-sample_new", class: "btn btn-primary" do %>
                Add New <i class="fa fa-plus"></i>
              <% end %>
            </div>
            <div class="btn-group pull-right">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
              </button>
              <ul class="dropdown-menu pull-right">
                <li><a href="#" onclick="javascript:print();">Print</a></li>
                <!-- <li><%#= link_to "Export to CSV", surveys_path(format: "csv") %></li>
                <li><%#= link_to "Export to Excel", surveys_path(format: "xls") %></li> -->
              </ul>
            </div>
          </div>
        <% end %>
        <div class="space15"></div>

        <div class="clearfix">
          <%= form_for(@survey, url: filter_surveys_path, html: {class: "form-horizontal form-response", role: "form", method: :post}, remote: true) do |f| %>
            <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
              
            <div class="form-group">
              <%= f.label :name, "Survey Name", class: "col-lg-2 control-label" %>
              <div class="col-lg-3">
                <%= f.text_field :name, class: "form-control", placeholder: "Survey name" %>
              </div>

              <%= f.label :period_start, "Periode", class: "col-lg-2 col-lg-offset-1 control-label" %>
              <div class="col-lg-4">
                <div class="input-group input-large" data-date="13/07/2013" data-date-format="mm/dd/yyyy">
                  <%= f.text_field :period_start, class: "form-control dpd1", placeholder: "Start" %>
                  <span class="input-group-addon">To</span>
                  <%= f.text_field :period_end, class: "form-control dpd2", placeholder: "End" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :status, class: "col-lg-2 control-label" %>
              <div class="col-lg-3">
                <%= f.select :status, options_for_select([['All', 'all'], ['Open', 'open'], ['Closed', 'closed']], f.object.status), {}, placeholder: "Status", class: "form-control" %>
              </div>
              <div class="col-lg-6 col-lg-offset-1">
                <%= f.button "Search", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="space15"></div>

        <%= render 'surveys', :surveys => @surveys %>

      </div>
    </div>
  </section>
</div>