<%= render '/users/header_profile', user: resource %>

<div class="col-md-12">
  <section class="panel">
    <div class="panel-body">
      <div class="tab-content tasi-tab">
        <div id="contacts" class="tab-pane active">
          <div class="position-center">
            <div class="prf-contacts sttng">
              <h2>Change Password</h2>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: "form", class: "form-horizontal" }) do |f| %>
              
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :password, class: "col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.password_field :password, placeholder: "New password", class: "form-control" %>
                </div>
              </div>

              <div class="form-group edit-password-user-profile">
                <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.password_field :password_confirmation, placeholder: "Re-type new password", class: "form-control" %>
                </div>
              </div>

              <div class="form-group edit-password-user-profile">
                <%= f.label :current_password, class: "col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.password_field :current_password, placeholder: "Current password", class: "form-control" %>
                </div>
                <i>(we need your current password to confirm your changes)</i>
              </div>
              
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <%= button_tag "Save", class: "btn btn-primary", type: "submit" %>
                  <%= link_to "Cancel", profile_path, class: "btn btn-default" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
