<div class="form-group <%= index==0 ? 'master-item' : 'index-item' %>" id="textbox_text_group_<%= index %>">
	<%#= label_tag "question[answer]", "Answer", class: "col-sm-2 control-label" %>
	<div class="col-sm-2 col-sm-offset-2">
		<%= text_field_tag "question[varians][text_before][#{index}]", current_value.present? ? current_value['varians']['text_before'][index] : "", class: "form-control", placeholder: "Text before" %>
	</div>
	<div class="col-sm-4">
		<%= text_field_tag "question[answer][#{index}]", current_value.present? ? current_value['answer'][index] : "", class: "form-control", placeholder: "Their answer" %>
	</div>
	<div class="col-sm-2">
		<%= text_field_tag "question[varians][text_after][#{index}]", current_value.present? ? current_value['varians']['text_after'][index] : "", class: "form-control", placeholder: "Text after" %>
	</div>
	<div class="col-sm-2">
		<button class="btn btn-primary textbox_text_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'textbox_text')" style="<%= current_value.present? ? (current_value['answer'].count==index.to_i+1 ? '' : 'display:none;' ) : '' %>">
			<i class="fa fa-plus"></i>
		</button>

		<% unless index.to_i==0 %>
			<button class="btn btn-primary" type="button" onclick="remove_row(<%= id %>, <%= index %>, 'textbox_text');">
				<i class='fa fa-minus'></i>
			</button>
		<% end %>
	</div>
</div>