<div class="form-group <%= index.to_i==0 ? 'master-item' : 'index-item' %>" id="ranking_group_<%= index %>">
	<div class="col-sm-6 col-sm-offset-2">
		<%= text_field_tag "question[varians][option][#{index}][label]", current_value.present? ? current_value['varians']['option'][index]['label'] : "", class: "form-control", placeholder: "Option #{index.to_i+1}" %>
	</div>
	<div class="col-sm-3">
		<button class="btn btn-primary ranking_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'ranking')" style="<%= current_value.present? ? (current_value['varians']['option'].count-1==index.to_i+1 ? '' : 'display:none') : '' %>">
			<i class="fa fa-plus"></i>
		</button>

		<% unless index.to_i==0 %>
			<button class="btn btn-primary" type="button" onclick="remove_row(<%= id %>, <%= index %>, 'ranking');">
				<i class='fa fa-minus'></i>
			</button>
		<% end %>
	</div>
</div>