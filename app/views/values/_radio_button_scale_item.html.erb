<div class="form-group <%= index.to_i==0 ? 'master-item' : 'index-item' %>" id="radio_button_scale_group_<%= index %>">
	<div class='col-sm-3 col-sm-offset-2'>
		<%= text_field_tag "question[varians][option][#{index}][text_before]", current_value.present? ? current_value['varians']['option'][index]['text_before'] : "", class: "form-control", placeholder: "Text before" %>
	</div>
	<div class='col-sm-3'>
		<%= text_field_tag "question[varians][option][#{index}][text_after]", current_value.present? ? current_value['varians']['option'][index]['text_after'] : "", class: "form-control", placeholder: "Text after" %>
	</div>
	<div class="col-sm-2">
		<button class="btn btn-primary radio_button_scale_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'radio_button_scale')" style="<%= current_value.present? ? (current_value['varians']['option'].count==index.to_i+1 ? '' : 'display:none') : '' %>">
			<i class="fa fa-plus"></i>
		</button>

		<% unless index.to_i==0 %>
			<button class="btn btn-primary" type="button" onclick="remove_row(<%= id %>, <%= index %>, 'radio_button_scale');">
				<i class='fa fa-minus'></i>
			</button>
		<% end %>
	</div>
</div>