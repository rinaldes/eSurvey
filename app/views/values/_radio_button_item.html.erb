<div class="form-group <%= index.to_i==0 ? 'master-item' : 'index-item' %>" id="radio_button_group_<%= index %>">
	<div class="col-sm-1 col-sm-offset-2 checkbox reset-width">
		<%= radio_button_tag "question[answer]", index, current_value.present? ? (current_value['answer'] == index ? true : false) : false  %>
	</div>
	<div class="col-sm-5">
		<%= text_field_tag "question[varians][options][#{index}][label]", current_value.present? ? (current_value['varians']['options'][index].present? ? current_value['varians']['options'][index]['label'] : "") : "", class: "form-control", placeholder: "Option #{index.to_i+1}" %>
	</div>
	<div class="col-sm-3">
		<button class="btn btn-primary radio_button_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'radio_button')" style="<%= current_value.present? ? (current_value['varians']['options']['other'].present? ? (current_value['varians']['options'].count-1==index.to_i+1 ? '' : 'display:none') : (current_value['varians']['options'].count==index.to_i+1 ? '' : 'display:none') ) : '' %>">
			<i class="fa fa-plus"></i>
		</button>
		
		<% if index.to_i==0 %>
			<div id="radio_button_other_button_0" class="other_button_wrapper" style="<%= current_value.present? ? (current_value['varians']['options']['other'].present? ? 'display:none' : '') : '' %>">
				<span style="<%= current_value.present? ? (current_value['varians']['options']['other'].present? && current_value['varians']['options'].count!=0 ? 'display:none' : '') : '' %>">or </span>
				<button class="btn btn-primary radio_button_other_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'radio_button_other')">
					Add Other
				</button>
			</div>
		<% end %>

		<% unless index.to_i==0 %>
			<button class="btn btn-primary" type="button" onclick="remove_row(<%= id %>, <%= index %>, 'radio_button');">
				<i class='fa fa-minus'></i>
			</button>
		<% end %>
	</div>
</div>