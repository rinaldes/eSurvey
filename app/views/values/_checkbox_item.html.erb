<div class="form-group <%= index.to_i==0 ? 'master-item' : 'index-item' %>" id="checkbox_group_<%= index %>">
	<div class="col-sm-1 col-sm-offset-2 checkbox reset-width">
		<%= check_box_tag "question[varians][answer][#{index}]", index, current_value.present? ? (current_value['varians']['answer'][index].present? ? true : false) : false  %>
	</div>
	<div class="col-sm-5">
		<%= text_field_tag "question[varians][option][#{index}][label]", current_value.present? ? current_value['varians']['option'][index]['label'] : "", class: "form-control", placeholder: "Option #{index.to_i+1}" %>
	</div>
	<div class="col-sm-3">
		<button class="btn btn-primary checkbox_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'checkbox')" style="<%= current_value.present? ? (current_value['varians']['option']['other'].present? ? (current_value['varians']['option'].count-1==index.to_i+1 ? '' : 'display:none') : (current_value['varians']['option'].count==index.to_i+1 ? '' : 'display:none') ) : '' %>">
			<i class="fa fa-plus"></i>
		</button>
		
		<% if index.to_i==0 %>
			<div id="checkbox_other_button_0" class="other_button_wrapper" style="<%= current_value.present? ? (current_value['varians']['option']['other'].present? ? 'display:none' : '') : '' %>">
				<span style="<%= current_value.present? ? (current_value['varians']['option']['other'].present? && current_value['varians']['option'].count!=0 ? 'display:none' : '') : '' %>">or </span>
				<button class="btn btn-primary checkbox_other_button" type="button" onclick="add_row(<%= id %>, <%= index %>, 'checkbox_other')">
					Add Other
				</button>
			</div>
		<% end %>

		<% unless index.to_i==0 %>
			<button class="btn btn-primary" type="button" onclick="remove_row(<%= id %>, <%= index %>, 'checkbox');">
				<i class='fa fa-minus'></i>
			</button>
		<% end %>
	</div>
</div>
	<%#= current_value['answer'] %>