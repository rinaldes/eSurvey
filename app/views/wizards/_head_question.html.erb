<% id ||= 0 %>
<% current_value = session[current_user.id.to_s]['question'][id.to_i] %>
<div class="form-group ">
	<%= label_tag "question[title]", "Question title", class: "col-sm-2 col-sm-2 control-label" %>
  <div class="col-sm-8">
    <%= text_field_tag "question[title]", current_value.present? ? current_value['title'] : "", class: 'form-control', :required => true, placeholder: "Question title" %>
  </div>
</div>

<div class="form-group ">
	<%= label_tag "question[help]", "Help text", class: "col-sm-2 col-sm-2 control-label" %>
  <div class="col-sm-8">
    <%= text_field_tag "question[help]", current_value.present? ? current_value['help'] : "", class: 'form-control', placeholder: "Help text" %>
  </div>
</div>